{
  // Debug:
  "debug.allowBreakpointsEverywhere": true,
  // Git:
  "git.decorations.enabled": true,
  "diffEditor.renderSideBySide": false,
  // Editor:
  "editor.accessibilitySupport": "off",
  "editor.bracketPairColorization.enabled": false,
  "editor.codeLens": true,
  "editor.colorDecorators": true,
  "editor.cursorSurroundingLines": 3,
  "editor.dragAndDrop": false,
  "editor.folding": false,
  "editor.formatOnPaste": false,
  "editor.gotoLocation.multipleReferences": "peek",
  "editor.gotoLocation.multipleDefinitions": "peek",
  "editor.gotoLocation.multipleDeclarations": "peek",
  "editor.gotoLocation.multipleImplementations": "peek",
  "editor.gotoLocation.multipleTypeDefinitions": "peek",
  "editor.hover.enabled": true,
  "editor.fontSize": 13,
  "editor.fontFamily": "Hack Nerd Font",
  "editor.fontLigatures": true,
  "editor.formatOnSave": true,
  "editor.glyphMargin": false,
  "editor.hideCursorInOverviewRuler": false,
  "editor.inlineSuggest.enabled": true,
  "editor.minimap.enabled": false,
  "editor.occurrencesHighlight": false,
  "editor.overviewRulerBorder": false,
  "editor.quickSuggestions.comments": true,
  "editor.renderWhitespace": "selection",
  "editor.renderLineHighlight": "none",
  "editor.rulers": [
    120
  ],
  "editor.showFoldingControls": "mouseover",
  "editor.scrollBeyondLastLine": false,
  // "editor.snippetSuggestions": "none",
  "editor.suggestSelection": "first",
  "editor.tabCompletion": "on",
  "editor.useTabStops": true,
  "editor.wordWrap": "wordWrapColumn",
  "editor.wordWrapColumn": 120,
  // eslint:
  "eslint.defaultFormatter": "esbenp.prettier-vscode",
  "eslint.format.enable": true,
  "eslint.packageManager": "yarn",
  "eslint.quiet": true,
  "eslint.run": "onSave",
  // Files:
  "explorer.compactFolders": false,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.decorations.badges": false,
  "explorer.openEditors.visible": 0,
  "files.associations": {
    ".babelrc": "jsonc",
    ".eslintrc": "jsonc",
    "*.pyi": "python",
    "*.bats": "shellscript",
    "*.sh": "shellscript",
    "*.nanorc": "shellscript",
  },
  "files.autoSave": "onFocusChange",
  "files.exclude": {
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/bower_components": true,
    "**/__pycache__": true,
    "**/.cache": true,
    "**/.idea": true,
    "**/.pytest_cache": true,
    "**/.mypy_cache": true,
    "**/.venv": true,
    "**/.coverage": true,
    "**/*.py[co]": true,
    "**/htmlcoverage": true,
    "**/docs/build": true,
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true,
    "**/Pods": true
  },
  "search.mode": "newEditor",
  // Extensions:
  "extensions.ignoreRecommendations": true,
  // Telemetry:
  "telemetry.enableCrashReporter": false,
  "telemetry.telemetryLevel": "off",
  "telemetry.enableTelemetry": false,
  // JS:
  "javascript.updateImportsOnFileMove.enabled": "always",
  // Workbench:
  "material-icon-theme.folders.theme": "specific",
  "window.title": "",
  "workbench.activityBar.visible": false,
  "workbench.colorTheme": "Ayu Mirage",
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },
  "workbench.iconTheme": "material-icon-theme",
  "workbench.statusBar.visible": true,
  "workbench.colorCustomizations": {
    "editorWarning.foreground": "#ffff00", // Warnings inside the file
    "editorError.foreground": "#f66", // Errors inside the file
    "list.warningForeground": "#e45bff", // Warnings on the file name
    "list.errorForeground": "#f66", // Errors on the file name
  },
  "zenMode.centerLayout": false,
  "zenMode.fullScreen": false,
  "zenMode.restore": true,
  // Linting/Formatting:
  "python.linting.enabled": false,
  "python.jediEnabled": false,
  "typescript.updateImportsOnFileMove.enabled": "always",
  // "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  // Shell:
  "terminal.external.osxExec": "iTerm",
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.enableBell": true,
  "editor.experimental.stickyScroll.enabled": true
